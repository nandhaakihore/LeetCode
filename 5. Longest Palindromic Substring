class Solution:
    def longestPalindrome(self, s: str) -> str:
        l = len(s)
        strcrr=""
        strbig = ""
        i=0
        flag = 0
        if(s == s[::-1]):
            strbig = s
        else:
            for i in range(l+1):
                for j in range(i+1, l+1):
                    # print ("check "+ s[i:j])
                    if(s[i:j] == s[i:j][::-1]):
                        strcrr = s[i:j]
                        # print ("crr "+strcrr +" ",len(strcrr))
                        # print ("big "+strbig +" ",len(strbig))
                        if(len(strcrr)>len(strbig)):
                            strbig = strcrr                
        # print ("big "+strbig)
        if(len(strbig)<=1):
            strbig = s[0]
        return strbig